<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileDirectory"
    android:background="@color/isabelline"
    >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/brandeisblue"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/secure_stash_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_regular"
            android:padding="4dp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/directory_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"

        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Statistics"
                android:fontFamily="@font/titillum_family"
                android:textColor="@color/black"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:visibility="gone"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="end"
                    android:layout_gravity="center"

                    android:text="9999"
                    android:layout_weight="1"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="start"
                    android:layout_gravity="center"

                    android:text="Documents Shared"
                    android:layout_weight="1"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:text="9999"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"
                    android:textColor="@android:color/darker_gray"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:text="Documents Stored"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:text="9999"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"
                    android:textColor="@android:color/darker_gray"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:text="Images Stored"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"

                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:text="9999"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"
                    android:textColor="@android:color/darker_gray"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:text="Total Items Stored"
                    android:fontFamily="@font/titillum_family"
                    android:padding="2dp"

                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:text="Account"
                android:fontFamily="@font/titillum_family"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="220dp"
                android:layout_height="52dp"
                android:id="@+id/change_password"

                android:gravity="center"
                android:layout_gravity="center"
                app:backgroundTint="@color/brandeisblue"
                android:textColor="@color/white"
                app:cornerRadius="8dp"

                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/titillum_family"

                android:text="Change Pin"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="220dp"
                android:layout_height="52dp"

                android:gravity="center"
                android:layout_gravity="center"
                app:backgroundTint="@color/white"
                android:textColor="@color/scarlet"
                app:cornerRadius="8dp"

                android:id="@+id/delete_all_data_and_account"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/titillum_family"

                android:text="Delete All Data &amp; Account"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="220dp"
                android:layout_height="52dp"

                android:gravity="center"
                android:layout_gravity="center"
                app:backgroundTint="@color/white"
                android:textColor="@color/scarlet"
                app:cornerRadius="8dp"

                android:id="@+id/delete_all_data"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="@font/titillum_family"

                android:text="Delete All Data"
                />
        </LinearLayout>



    </LinearLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/back_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="24dp"

        android:text="Back"

        app:backgroundTint="@color/spacecadet"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        android:textColor="@color/white"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
